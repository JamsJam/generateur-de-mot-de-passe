{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Ajouter un compte{% endblock %}

{% block body %}

    <div class="passForm">
    
        <h1 class="titre titre--48"> Ajouter un compte</h1>

        {{ include('motdepasse/_form.html.twig') }}



    </div>

    


{% endblock %}

    {% block script %}

    <script>
        let showMdp = document.querySelector("#showmdp")
        let mdp = document.querySelector("#motdepasse_password")

        showMdp.addEventListener('mousedown', (e)=>{
            e.preventDefault()
            mdp.setAttribute('type', 'text')
        })

        showMdp.addEventListener('mouseup', ()=>{
           
            mdp.setAttribute('type', 'password')
        })
    </script>

    {% endblock %}