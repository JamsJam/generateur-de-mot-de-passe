{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}




    <div class="login">


        <h1 class="titre">KOJI MANAGER</h1>

        <form  action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="flash-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

                {% for message in app.flashes('mail_error') %}
            <div class="flash-danger">
                {{ message }}
            </div>
            {% endfor %}
            
            <input class="text-input"  type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email">

            <input class="text-input" type="password" id="password" name="_password" placeholder="Mot de passe">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# ? If you want to control the URL the user is redirected to on success #}
            {# <input type="hidden" name="_target_path" value="/manage"> #}

            <button type="submit" class="btn btn-modal">Se connecter</button>

        </form>

    </div>



{% endblock %}
